<h3>New League Message</h3>

<form class="new-message-form form">
  <div class="form-group">
    <label for="message-title">Title</label>
    <input type="text"
           name="message[title]"
           class="form-control"
           value=""
           id="message-title">
  </div>

  <div class="form-group">
    <label for="message-body">Body</label>
    <textarea name="message[body]" class="form-control" id="message-body"></textarea>
  </div>

  <input type="submit" name="name" value="Submit">
</form>
