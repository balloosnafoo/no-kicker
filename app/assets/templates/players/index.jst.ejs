<h1>Players</h1>

<input type="text" class="search-bar player-filter-tool" placeholder="search" value="<%= searchTerm %>">
<div class="btn-group player-filter-tool">
  <a class="btn btn-primary btn-xs dropdown-toggle"
     id="R0B9558"
     href="#"
     data-toggle="dropdown"
     data-target="#"
     aria-expanded="false">ALL <i class="caret"></i>
   </a>
   <ul class="dropdown-menu pull-right" role="menu">
     <li class="active position-filter-option"><a href="#">ALL</a></li>
     <li class="position-filter-option"><a href="#">QB</a></li>
     <li class="position-filter-option"><a href="#">RB</a></li>
     <li class="position-filter-option"><a href="#">WR</a></li>
     <li class="position-filter-option"><a href="#">TE</a></li>
     <li class="position-filter-option"><a href="#">Flex</a></li>
   </ul>
 </div>
<table class="table players-table">
  <tr>
    <th colspan="3">Player</th>
    <th>Opp</th>
    <th>Stats</th>
    <th colspan="2">Fantasy</th>
    <th colspan="3">Availability</th>
  </tr>
  <tr>
    <th>Name</th>
    <th>Pos</th>
    <th>Team</th>
    <th>Week <%= NoKicker.currentWeek + 1 %></th>
    <th>Summary</th>
    <th>Total</th>
    <th>Avg</th>
    <th>Owner</th>
    <th>Action</th>
  </tr>
</table>

<% if (!players.length) { %>
  <div class="spinner">
    <div class="rect1"></div>
    <div class="rect2"></div>
    <div class="rect3"></div>
    <div class="rect4"></div>
    <div class="rect5"></div>
  </div>
<% } else %>
