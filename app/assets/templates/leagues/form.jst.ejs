<div class="container">
  <div class="jumbotron">
    <form>
      <div class="form-group">
        <label for="league-name">League Name</label>
        <input type="text"
               name="league[name]"
               value="<%= league.escape("name") %>">
      </div>

      <div class="form-group">
        <label for="league[eligibility]">League Eligibility</label>
        <label>
          <input type="radio"
                 name="league[public]"
                 value="true">
          Public
        </label>

        <label>
          <input type="radio"
                 name="league[public]"
                 value="false">
          Private
        </label>
      </div>
    </form>
  </div>
</div>
