<h1>My Leagues</h1>

<div class="league-add-join">
  <button type="button" class="btn btn-default" id="new-league-button">
    <span class="glyphicon glyphicon-plus-sign" style="color: green" aria-hidden="true"></span>
    Create New League
  </button>
  <!-- New League, Join League, etc. -->
</div>

<table class="table">
  <tr>
    <th colspan="2">Fantasy</th>
    <th colspan="3">Standings</th>
    <th colspan="2">Games</th>
  </tr>
  <tr>
    <th>League</th>
    <th>Team</th>
    <th>W</th>
    <th>L</th>
    <th>%</th>
    <th>Previous</th>
    <th>Current</th>
  </tr>
  <% leagues.each(function (league) { %>
    <tr>
      <td>
        <a href="#leagues/<%= league.id %>"><%= league.escape("name") %></a>
      </td>
      <td>
        <a href="#leagues/<%= league.id %>/teams/<%= league.user_team().id %>">
          <%= league.user_team().escape("name") %></td>
        </a>
      <td><%= league.user_team().escape("wins") %></td>
      <td><%= league.user_team().escape("losses") %></td>
      <td><%= league.user_team().escape("win_percent") %></td>
      <td><%= league.user_team().escape("prev_opp") %></td>
      <td><%= league.user_team().escape("next_opp") %></td>
    </tr>
  <% }); %>
</table>
