<% if (player.escape("lname")) { %>
  <td>
    <% if (team.id !== user_team.id) { %>
      <input type="checkbox" name="trade[toReceive][]" value="<%= player.id %>">
    <% } else { %>
      <input type="checkbox" name="trade[toGive][]" value="<%= player.id %>">
    <% } %>
  </td>
  <td><%= player.escape("fname") + ". " + player.escape("lname") %></td>
  <td><%= player.escape("position") %></td>
  <td><%= player.escape("team_name") %></td>

  <td><%= player.get("info").next_opp %></td>

  <td>
    <% if ( player.escape("position") === "RB" ) { %>
      <%= player.get("stats").rushing_yds %>yds <%= player.get("stats").rushing_tds %>tds
    <% } else if (["TE", "WR"].indexOf(player.escape("position")) !== -1 ) { %>
      <%= player.get("stats").receiving_yds %>yds <%= player.get("stats").receiving_tds %>tds
    <% } else if (player.escape("position") === "QB") { %>
      <%= player.get("stats").passing_yds %>yds <%= player.get("stats").passing_tds %>tds
    <% } else { %>
      ---
    <% } %>
  </td>

  <% if (player.get("stats")) { %>
    <td>
      <%= player.get("stats").total_fantasy %>
    </td>
    <td>
      <%= player.get("stats").ave_fantasy %>
    </td>
  <% } else { %>
    <td>---</td>
    <td>---</td>
  <% } %>

  <td>
    <% if ( roster_slot.escape("position") === "bench" ) { %>
      <div class="roster-position-indicator">
        <%= roster_slot.escape("position") %>
      </div>
    <% } else { %>
      <div class="roster-position-indicator starting-slot">
        <%= roster_slot.escape("position") %>
      </div>
    <% } %>
  </td>
<% } %>
